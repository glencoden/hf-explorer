{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "verbatimModuleSyntax": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "moduleResolution": "Bundler",
        "module": "ESNext",
        "noEmit": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "jsx": "preserve",
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "exclude": ["node_modules"]
}

